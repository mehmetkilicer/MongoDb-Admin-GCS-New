@model MongoDbEgitim.Dtos.ProductDtos.GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <br />
    <br>
    <form method="post">
        <label>Ürün</label>
        <input type="hidden" asp-for="ProductId" />
        <input type="text" class="form-control" asp-for="Name" />
        <br>
        <label>Stok</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br>
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, "Seçiniz...", new { @class = "form-control" })
        <br />
        <label>Görsel</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <br>
        <button class="btn btn-primary">Ürünü Güncelle</button>
    </form>
</div>
